{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "Pro Worker",
    "description": "Records your worked hours with optimised background processing free timer and give value added breakdown analysis of recorded time",
    "icons": {
        "128": "assets/app-icon/icon35.png",
        "48": "assets/app-icon/icon35.png",
        "16": "assets/app-icon/icon35.png"
      },
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "identity",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "assets/app-icon/icon35.png",
        "default_popup": "src/popup/popup.html",
        "default_title": "Timer - Record work hours"
      },
    "background": {
        "scripts": [
          "./env.vars.js",
          "lib/firebase.js",
          "lib/firebase-auth.js",
          "lib/firebase-firestore.js",
          "lib/moment.js",
          "src/background/firebase-utils.js",
          "src/common.utils.js",
          "src/background/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self';",
    "oauth2": {
      "client_id": "1010240089470-nrplrpbv2kiddk097t4j5dihs0e7n3m8.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    }
  }